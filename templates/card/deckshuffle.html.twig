{% extends "base.html.twig" %}

{% block title %}Card Shuffle{% endblock %}

{% block body %}
<div class="two-col-layout">
            <aside class="aside">
                <div class="">
                    <h2> Meny</h2>
                        <ul>
                            <li><a href="{{ path('card') }}">Landing page</li>
                            <li><a href="{{ path('deck') }}">Deck</li>
                            <li><a href="{{ path('shuffle') }}">Shuffles</li>
                            <li><a href="{{ path('draw') }}">Draw</a></li>
                            <li><a href="{{ path('reset') }}">Reset</a></li>
                            {# <li><a href="{{ path('draw_many') }}">Draw many</a></li> #}
                        </ul>
                </div>
            </aside>

    <main class="main">
        <h1>Deck</h1>

        <p>Here is the deck shuffled.</p>

        {% for card in deck %}
            {% if '♥' in card %}
                <div class="red">
                    {{card}}
                </div>

            {% elseif '♦️' in card %}
                <div class="red">
                    {{card}}
                </div>

            {% else %}
                <div>
                    {{card}}
                </div>
            {% endif %}
        {%endfor%}
    </main>
</div>

{% endblock %}
