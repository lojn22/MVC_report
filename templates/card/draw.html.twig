{% extends "base.html.twig" %}

{% block title %}Draw Card{% endblock %}

{% block body %}
<div class="two-col-layout">
            <aside class="aside">
                <div class="">
                    <h2> Meny</h2>
                        <ul>
                            <li><a href="{{ path('card') }}">Landing page</li>
                            <li><a href="{{ path('deck') }}">Deck</li>
                            <li><a href="{{ path('shuffle') }}">Shuffles</li>
                            <li><a href="{{ path('draw') }}">Draw</a></li>
                            <li><a href="{{ path('reset') }}">Reset</a></li>
                            {# <li><a href="{{ path('draw_many') }}">Draw many</a></li> #}
                        </ul>
                </div>
            </aside>

    <main class="main">
        <h1>Drawn card</h1>

        <ul>
                {% if '♥' in card %}
                    <div class="red">
                        <li>{{card}}</li>
                    </div>

                {% elseif '♦️' in card %}
                    <div class="red">
                        <li>{{card}}</li>
                    </div>

                {% else %}
                    <div>
                        <li>{{card}}</li>
                    </div>
                {% endif %}
                
                <li>Antal kort kvar {{card_left}}</li>
        </ul>
    </main>
</div>
{% endblock %}