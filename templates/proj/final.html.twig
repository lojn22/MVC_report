{% extends "proj/base.html.twig" %}

{% block title %}Final{% endblock %}

{% block body %}
    <div class="final-contatiner">
        {% set result = app.session.get('final_result') %}
        <div class="result-box">
            {% if result %}
                {% if result.status == 'win' %}
                    <p class="win">{{ result.message }}</p>
                {% elseif result.status == 'partial' %}
                    <p class="partial">{{ result.message }}</p>
                {% else %}
                    <p class="lose">{{ result.message }}</p>
                {% endif %}
            {% else %}
                <p>No results yet. Go play!</p>
            {% endif %}
        </div>

        <div class="final-content">
            <div class="final-left-side">
                {% include 'proj/inventory.html.twig' with {'player': player} %}
                <form action="{{ path('proj_restart') }}">
                    <button class="sign-btn">Play again</button>
                </form>
            </div>

            <div class="final-right-side">
                <img class="paj-img" src="{{ asset('img/paj.png') }}" alt="paj">
            </div>
        </div>
    </div>
{% endblock %}